{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "noEmitOnError": false,
        "noImplicitAny": true,
        "sourceMap": true,
        "target": "es2015",
        "inlineSources": true,
        "stripInternal": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "jsx": "react",
        "types": [
            "node",
            "@types/webpack-env",
            "@types/jest"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "paths": {
            "~": ["./src"],
            "~/*": ["./src/*"]
        }
    },
    "exclude": [],
    "compileOnSave": false,
    "buildOnSave": false
}